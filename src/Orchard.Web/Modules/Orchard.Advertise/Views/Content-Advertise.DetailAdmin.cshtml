@using Orchard.Advertise.Extensions;
@using Orchard.Advertise.Models;
@using Orchard.ContentManagement

@{
    ContentItem advertise = Model.ContentItem;
    var displayText = advertise.ContentManager.GetItemMetadata(advertise).DisplayText;
    Layout.Title = T("Manage {0}", displayText);
}
@Display(Model.Header)
@Display(Model.Actions)
@Display(Model.Content)
