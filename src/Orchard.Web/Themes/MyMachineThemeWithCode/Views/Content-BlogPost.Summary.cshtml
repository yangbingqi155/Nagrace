@using Orchard.ContentManagement;
@using Orchard.Tags.ViewModels;
@{
    var blogPost = Model.ContentItem;
}
<h3><a class="blog_post_title" href="@Url.ItemDisplayUrl((IContent)blogPost)">@blogPost.TitlePart.Title</a></h3>
<div class="metadata" style="margin-bottom: 10px;">
    <time class="clearfix" datetime="@blogPost.CommonPart.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd")">@blogPost.CommonPart.CreatedUtc.ToLocalTime().ToString("dddd, MMMM d, yyyy")</time>
    @if (Model.Tags.Items.Count > 0 && ((IEnumerable<ShowTagViewModel>)Model.Tags.Items[0].Tags).Any()) {
        @Display(Model.Tags)
    }
    @Display(Model.CommentsCount)- @blogPost.CommonPart.Owner.UserName
</div>
 @if (!String.IsNullOrEmpty(blogPost.BlogPost.ImageTitle.Url)) {
    <img src="@Url.Content(blogPost.BlogPost.ImageTitle.Url)" class="attachment-post-thumbnail wp-post-image blog_post-thumbnail" alt="">
 }

@Display(Model.Summary)

